@page
@model IndexModel
@{
    ViewData["Titulo"] = lib_lenguajes.RsIndex.lbTitulo;
}
@if (!Model.EstaLogueado)
{
    <div class="container"
         align="left"
         style="width:100%">
        <h3>
            @lib_lenguajes.RsIndex.lbTitulo
        </h3>

        <form method="POST">
            <div style="width:60%">
                <div class="form-group">
                    <label class="control-label">
                        @lib_lenguajes.RsIndex.lbUsuario
                    </label>
                    <input onchange="keyUp(this)"
                       asp-for="@Model.Email"
                       class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">
                        @lib_lenguajes.RsIndex.lbContraseña
                    </label>
                    <input type="password"
                       onchange="keyUp(this)"
                       asp-for="@Model.Contraseña"
                       class="form-control" />
                </div>

                <input type="submit"
                   value="@lib_lenguajes.RsMenu.lbLimpiar"
                   asp-page-handler="BtLimpiar"
                   class="btn btn-default" />
                <input type="submit"
                   value="@lib_lenguajes.RsMenu.lbEntrar"
                   asp-page-handler="BtEntrar"
                   class="btn btn-default" />
            </div>
        </form>
    </div>
}
else
{
    <div class="text-center">
        <h1 class="display-4">
            @lib_lenguajes.RsIndex.lbBienvenido
        </h1>

        <form method="POST">
            <input type="submit"
               value="@lib_lenguajes.RsMenu.lbCerrar"
               asp-page-handler="BtCerrar"
               class="btn btn-default" />
        </form>
    </div>
}
