@page
@model InicioCliente
@* @{
    Layout = null;
} *@
@{
    ViewData["Titulo"] = lib_lenguajes.RsAdmin.lbTitulo;
}

@if (!Model.EstaLogueado)
{
    <link rel="stylesheet" href="~/css/styles.css" />
    <main class="d-flex align-items-start justify-content-center" style="height: 100vh; background-color: #FFE8E8; padding-top: 50px;">
        <div class="container" style="width: 60%;">
            <h3 class="text-center" style="margin-bottom: 30px;">@lib_lenguajes.RsAdmin.lbTitulo</h3>

            <form method="POST">
                <div class="form-group text-center">
                    <label class="control-label">@lib_lenguajes.RsAdmin.lbUsuario</label>
                    <input onchange="keyUp(this)"
                           asp-for="@Model.Email"
                           class="form-control"
                           style="max-width: 300px; margin: auto;" />
                </div>
                <div class="form-group text-center" style="margin-top: 15px;">
                    <label class="control-label">@lib_lenguajes.RsAdmin.lbContraseña</label>
                    <input type="password"
                           onchange="keyUp(this)"
                           asp-for="@Model.Contraseña"
                           class="form-control"
                           style="max-width: 300px; margin: auto;" />
                </div>

                <div class="text-center" style="margin-top: 20px;">
                    <input type="submit" 
                        value="@lib_lenguajes.RsMenu.lbEntrar" 
                        asp-page-handler="BtEntrar"
                           class="btn btn-danger" />

                    <a class="nav-link text-dark"
                       asp-area=""
                       asp-page="Registrarse">
                        Registrarse
                    </a>
                </div>
            </form>
        </div>
    </main>
}
else
{
    <main class="d-flex align-items-center justify-content-center" style="height: 100vh; background-color: #FFE8E8;">
        <div class="text-center">
            <h1 class="display-4">@lib_lenguajes.RsAdmin.lbBienvenido</h1>
            <form method="POST">
                <input type="submit" value="@lib_lenguajes.RsMenu.lbCerrar" asp-page-handler="BtCerrar" class="btn btn-default" />
            </form>
        </div>
    </main>
}