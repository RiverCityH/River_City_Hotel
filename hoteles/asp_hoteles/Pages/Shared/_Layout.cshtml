<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" 
        content="width=device-width, initial-scale=1.0" />
    <title>
        @ViewData["Titulo"] - @lib_lenguajes.RsMenu.lbApp
    </title>
    <link rel="stylesheet" 
        href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" 
        href="~/css/site.css" 
        asp-append-version="true" />
    <link rel="stylesheet" 
        href="~/asp_hoteles.styles.css" 
        asp-append-version="true" />
    <link rel="stylesheet"
          href="~/css/site.css" />
    <link rel="stylesheet"
          href="~/css/styles.css" />
    <link rel="stylesheet"
          href="~/css/buttons.css" />
    <link rel="stylesheet"
          href="~/css/colors.css" />
    <link rel="stylesheet"
          href="~/css/screens.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>

<body style="background-color:#FFE8E8">
        <main class="main-content">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light custom-bg border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-page="/Index">
                        @lib_lenguajes.RsMenu.lbApp
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            @if (ViewData.ContainsKey("Logueado"))
                            {
                                @if (ViewData.ContainsKey("Rol") && ViewData["Rol"].ToString() == "0")
                                {
                                    <!-- Primer Grupo: Gestión de Localidades -->
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" href="#" id="gestionLocalidades" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            Gestión de Localidades
                                        </a>
                                        <ul class="dropdown-menu" aria-labelledby="gestionLocalidades">
                                            <li><a class="dropdown-item" asp-area="" asp-page="/Ventanas/Paises">@lib_lenguajes.RsMenu.lbPaises</a></li>
                                            <li><a class="dropdown-item" asp-area="" asp-page="/Ventanas/Departamentos">@lib_lenguajes.RsMenu.lbDepartamentos</a></li>
                                            <li><a class="dropdown-item" asp-area="" asp-page="/Ventanas/Ciudades">@lib_lenguajes.RsMenu.lbCiudades</a></li>
                                        </ul>
                                    </li>

                                    <!-- Segundo Grupo: Gestión de Personas -->
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" href="#" id="gestionPersonas" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            Gestión de Personas
                                        </a>
                                        <ul class="dropdown-menu" aria-labelledby="gestionPersonas">
                                            <li><a class="dropdown-item" asp-area="" asp-page="/Ventanas/Personas">@lib_lenguajes.RsMenu.lbPersonas</a></li>
                                            <li><a class="dropdown-item" asp-area="" asp-page="/Ventanas/Empleados">@lib_lenguajes.RsMenu.lbEmpleados</a></li>
                                            <li><a class="dropdown-item" asp-area="" asp-page="/Ventanas/Proveedores">@lib_lenguajes.RsMenu.lbProveedores</a></li>
                                        </ul>
                                    </li>

                                    <!-- Tercer Grupo: Gestión Administrativa -->
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" href="#" id="gestionAdministrativa" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            Gestión Administrativa
                                        </a>
                                        <ul class="dropdown-menu" aria-labelledby="gestionAdministrativa">
                                            <li><a class="dropdown-item" asp-area="" asp-page="/Ventanas/Tipos">@lib_lenguajes.RsMenu.lbTipos</a></li>
                                            <li><a class="dropdown-item" asp-area="" asp-page="/Ventanas/Facturas">@lib_lenguajes.RsMenu.lbFacturas</a></li>
                                            <li><a class="dropdown-item" asp-area="" asp-page="/Ventanas/Productos">@lib_lenguajes.RsMenu.lbProductos</a></li>
                                        </ul>
                                    </li>
                                }

                            if (ViewData.ContainsKey("Rol") && ViewData["Rol"].ToString() == "1")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark"
                                        asp-area=""
                                        asp-page="/Ventanas/Tipos">
                                        @lib_lenguajes.RsMenu.lbTipos
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark"
                                        asp-area=""
                                        asp-page="/Ventanas/Personas">
                                        @lib_lenguajes.RsMenu.lbPersonas
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark"
                                        asp-area=""
                                        asp-page="/Ventanas/Empleados">
                                        @lib_lenguajes.RsMenu.lbEmpleados
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark"
                                        asp-area=""
                                        asp-page="/Ventanas/Proveedores">
                                        @lib_lenguajes.RsMenu.lbProveedores
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark"
                                        asp-area=""
                                        asp-page="/Ventanas/Productos">
                                        @lib_lenguajes.RsMenu.lbProductos
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark"
                                        asp-area=""
                                        asp-page="/Ventanas/Facturas">
                                        @lib_lenguajes.RsMenu.lbFacturas
                                    </a>
                                </li>
                            }
                            if (ViewData.ContainsKey("Rol") && ViewData["Rol"].ToString() == "2")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark"
                                        asp-area=""
                                        asp-page="/Ventanas/Facturas">
                                        @lib_lenguajes.RsMenu.lbFacturas
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
  
    <div class="container">
        <main role="main"
              class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer footer1 text-muted">
        <div class="container">
            &copy; @lib_lenguajes.RsMenu.lbAño - @lib_lenguajes.RsMenu.lbApp
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js">

    </script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js">

    </script>
    <script src="~/js/site.js" asp-append-version="true">

    </script>

    @await RenderSectionAsync("Scripts", required: false)
    </main>
</body>

</html>