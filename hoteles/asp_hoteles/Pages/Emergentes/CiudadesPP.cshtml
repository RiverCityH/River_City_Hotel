@model asp_hoteles.Pages.Emergentes.CiudadesPPModel
@{

}
<center>
    <div>
        <div align="left">
            <h3>@lib_lenguajes.RsMenu.lbCiudades</h3>
        </div>
        <div align="left"
            class="bt_panel_buttons">
            <input type="submit"
                value="@lib_lenguajes.RsMenu.lbRefrescar"
                asp-page-handler="BtCiudades"
                class="btn btn-danger" />
        </div>
            
        @if (ViewData.ContainsKey("Mensaje"))
        {
            @await Html.PartialAsync(
                "../Emergentes/Mensajes.cshtml")
        }

        <div class="panel panel-default">
            <table class="tb_data table table-striped table-bordered table-hover">
                <tr>
                    <th>
                        @lib_lenguajes.RsCiudades.clPais
                    </th>
                    <th>
                        @lib_lenguajes.RsCiudades.clDepartamento
                    </th>
                    <th>
                        @lib_lenguajes.RsCiudades.clNombre
                    </th>
                    <th class="cl_actions">
                        @lib_lenguajes.RsMenu.lbAction
                    </th>
                </tr>
                @if (Model != null && Model.Lista != null)
                {
                    @foreach (var elemento in Model.Lista)
                    {
                        <tr onmouseover="changeOver(this)"
                            onmouseout="changeOut(this)">
                            <td>@elemento._Departamento!._Pais!.Nombre</td>
                            <td>@elemento._Departamento!.Nombre</td>
                            <td>@elemento.Nombre</td>
                            <td>
                                <input type="submit"
                                    value="@lib_lenguajes.RsMenu.lbSeleccionar"
                                    asp-page-handler="BtSelCiudad"
                                    class="btn btn-danger"
                                    asp-route-data="@asp_hoteles.Nucleo.EsconderID.Encriptar(elemento.Id)"/>
                            </td>
                        </tr>
                    }
                }
            </table>
        </div>
    </div>
</center>