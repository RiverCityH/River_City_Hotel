@page
@model asp_hoteles.Pages.Ventanas.EmpleadosModel
@{
    ViewData["Titulo"] = lib_lenguajes.RsMenu.lbEmpleados;
}
<center>
    <div>
        <form method="POST"
            enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div align="left">
                <h3>@lib_lenguajes.RsMenu.lbEmpleados</h3>
            </div>
            <div align="left"
                class="bt_panel_buttons">
                <input type="submit"
                    value="@lib_lenguajes.RsMenu.lbRefrescar"
                    asp-page-handler="BtRefrescar"
                    class="btn btn-secondary"
                    disabled="@(!Model.MostrarLista)" />
                <input type="submit"
                    value="@lib_lenguajes.RsMenu.lbNuevo"
                    asp-page-handler="BtNuevo"
                    class="btn btn-secondary"
                    disabled="@(!Model.MostrarLista)" />
                <input type="submit"
                    value="@lib_lenguajes.RsMenu.lbGuardar"
                    asp-page-handler="BtGuardar"
                    class="btn btn-secondary"
                    disabled="@(Model.MostrarLista)" />
                <input type="submit"
                    value="@lib_lenguajes.RsMenu.lbCancelar"
                    asp-page-handler="BtCancelar"
                    class="btn btn-secondary"
                    disabled="@(Model.MostrarLista)" />
            </div>
            
            @if (!Model.MostrarLista ||
                 Model.MostrarBorrar ||
                 ViewData.ContainsKey("Mensaje"))
            {
                <input type="hidden"
                   asp-for="@Model.Actual!.Id" />
                <input type="hidden"
                   asp-for="@Model.Actual!.Persona" />
                <input type="hidden"
                   asp-for="@Model.Actual!._Persona!.Nombre" />
                <input type="hidden"
                   asp-for="@Model.Actual!.Cargo" />
                <input type="hidden"
                   asp-for="@Model.Actual!._Cargo!.Nombre" />
                <input type="hidden"
                   asp-for="@Model.Actual!.ARL" />
                <input type="hidden"
                   asp-for="@Model.Actual!._ARL!.Nombre" />
                <input type="hidden"
                   asp-for="@Model.Actual!.Pension" />
                <input type="hidden"
                   asp-for="@Model.Actual!._Pension!.Nombre" />
                <input type="hidden"
                   asp-for="@Model.Actual!.EPS" />
                <input type="hidden"
                   asp-for="@Model.Actual!._EPS!.Nombre" />
                <input type="hidden"
                   asp-for="@Model.Actual!.TipoSangre" />
                <input type="hidden"
                   asp-for="@Model.Actual!._TipoSangre!.Nombre" />
                <input type="hidden"
                   asp-for="@Model.Actual!.EstadoCivil" />
                <input type="hidden"
                   asp-for="@Model.Actual!._EstadoCivil!.Nombre" />
            }
            @if (Model.MostrarBorrar ||
                 ViewData.ContainsKey("Mensaje"))
            {
                
            }

            @if (!Model.MostrarLista &&
                 !ViewData.ContainsKey("Mensaje"))
            {
                <div class="panel panel-default">
                    <h3>@lib_lenguajes.RsPersonas.lbSingular</h3>

                    <div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                @lib_lenguajes.RsEmpleados.lbPersona
                            </label>
                            <div class="col-lg-6">
                                <input id="nmPersona"
                                   disabled="disabled"
                                   class="cts_forms form-control"
                                   onchange="keyUp(this)"
                                   asp-for="@Model.Actual!._Persona!.Nombre" />
                                <input type="submit"
                                   value=" "
                                   asp-page-handler="BtPersonas"
                                   class="btn btn-secondary" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                @lib_lenguajes.RsEmpleados.lbCargo
                            </label>
                            <div class="col-lg-6">
                                <input id="nmCargo"
                                   disabled="disabled"
                                   class="cts_forms form-control"
                                   onchange="keyUp(this)"
                                   asp-for="@Model.Actual!._Cargo!.Nombre" />
                                <input type="submit"
                                   value=" "
                                   asp-page-handler="BtTipos"
                                   asp-route-data="Cargo"
                                   class="btn btn-secondary" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                @lib_lenguajes.RsEmpleados.lbARL
                            </label>
                            <div class="col-lg-6">
                                <input id="nmARL"
                                   disabled="disabled"
                                   class="cts_forms form-control"
                                   onchange="keyUp(this)"
                                   asp-for="@Model.Actual!._ARL!.Nombre" />
                                <input type="submit"
                                   value=" "
                                   asp-page-handler="BtTipos"
                                   asp-route-data="ARL"
                                   class="btn btn-secondary" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                @lib_lenguajes.RsEmpleados.lbPension
                            </label>
                            <div class="col-lg-6">
                                <input id="nmPension"
                                   disabled="disabled"
                                   class="cts_forms form-control"
                                   onchange="keyUp(this)"
                                   asp-for="@Model.Actual!._Pension!.Nombre" />
                                <input type="submit"
                                   value=" "
                                   asp-page-handler="BtTipos"
                                   asp-route-data="Pension"
                                   class="btn btn-secondary" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                @lib_lenguajes.RsEmpleados.lbEPS
                            </label>
                            <div class="col-lg-6">
                                <input id="nmEPS"
                                   disabled="disabled"
                                   class="cts_forms form-control"
                                   onchange="keyUp(this)"
                                   asp-for="@Model.Actual!._EPS!.Nombre" />
                                <input type="submit"
                                   value=" "
                                   asp-page-handler="BtTipos"
                                   asp-route-data="EPS"
                                   class="btn btn-secondary" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                @lib_lenguajes.RsEmpleados.lbTipoSangre
                            </label>
                            <div class="col-lg-6">
                                <input id="nmTipoSangre"
                                   disabled="disabled"
                                   class="cts_forms form-control"
                                   onchange="keyUp(this)"
                                   asp-for="@Model.Actual!._TipoSangre!.Nombre" />
                                <input type="submit"
                                   value=" "
                                   asp-page-handler="BtTipos"
                                   asp-route-data="TipoSangre"
                                   class="btn btn-secondary" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                @lib_lenguajes.RsEmpleados.lbEstadoCivil
                            </label>
                            <div class="col-lg-6">
                                <input id="nmEstadoCivil"
                                   disabled="disabled"
                                   class="cts_forms form-control"
                                   onchange="keyUp(this)"
                                   asp-for="@Model.Actual!._EstadoCivil!.Nombre" />
                                <input type="submit"
                                   value=" "
                                   asp-page-handler="BtTipos"
                                   asp-route-data="EstadoCivil"
                                   class="btn btn-secondary" />
                            </div>
                        </div>
                    </div>
                </div>
            }

            @if (ViewData.ContainsKey("Mensaje"))
            {
                @await Html.PartialAsync(
                    "../Emergentes/Mensajes.cshtml")
            }

            @if (Model.MostrarPersonas)
            {
                <div class='popup'>
                    <div class='pp_inner'>
                        <div style='width:95%'>
                            @await Html.PartialAsync(
                                "../Emergentes/PersonasPP.cshtml", Model.personasPP)
                        </div>
                    </div>
                </div>
            }
            @if (Model.MostrarTipos)
            {
                <div class='popup'>
                    <div class='pp_inner'>
                        <div style='width:95%'>
                            @await Html.PartialAsync(
                                "../Emergentes/TiposPP.cshtml", Model.tiposPP)
                        </div>
                    </div>
                </div>
            }

            @if (Model.MostrarBorrar)
            {
                <div class='popup'>
                    <div class='pp_del_inner'>
                        <div style='width:95%'>
                            <h2 align="left">
                                @lib_lenguajes.RsMenu.lbMensaje
                            </h2>

                            <h4 align="left">
                                @lib_lenguajes.RsMenu.lbBorrarEntidad
                            </h4>
                            <h6 align="left">
                                @Model.Actual!._Persona!.Nombre
                            </h6>
                            <br />
                            <br />
                            <input type="submit"
                               value="@lib_lenguajes.RsMenu.lbBorrar"
                               asp-page-handler="BtBorrar"
                               class="btn btn-secondary" />
                            <input type="submit"
                               value="@lib_lenguajes.RsMenu.lbCerrar"
                               asp-page-handler="BtCancelar"
                               class="btn btn-secondary" />
                        </div>
                    </div>
                </div>
            }

            @if (Model.MostrarLista)
            {
                <div class="panel panel-default">
                    <table class="tb_data table table-striped table-bordered table-hover">
                        <tr>
                            <th>
                                @lib_lenguajes.RsEmpleados.clPersona
                            </th>
                            <th>
                                @lib_lenguajes.RsEmpleados.clCargo
                            </th>
                            <th>
                                @lib_lenguajes.RsEmpleados.clEstadoCivil
                            </th>
                            <th>
                                @lib_lenguajes.RsEmpleados.clEPS
                            </th>
                            <th>
                                @lib_lenguajes.RsEmpleados.clPension
                            </th>
                            <th class="cl_actions">
                                @lib_lenguajes.RsMenu.lbAction
                            </th>
                        </tr>
                        @if (Model != null && Model.Lista != null)
                        {
                            @foreach (var elemento in Model.Lista)
                            {
                                <tr onmouseover="changeOver(this)"
                                    onmouseout="changeOut(this)">
                                    <td>@elemento._Persona!.Nombre</td>
                                    <td>@elemento._Cargo!.Nombre</td>
                                    <td>@elemento._EstadoCivil!.Nombre</td>
                                    <td>@elemento._EPS!.Nombre</td>
                                    <td>@elemento._Pension!.Nombre</td>
                                    <td>
                                        <input type="submit"
                                            value="@lib_lenguajes.RsMenu.lbModicar"
                                            asp-page-handler="BtModificar"
                                            class="btn btn-secondary"
                                            asp-route-data="@asp_hoteles.Nucleo.EsconderID.Encriptar(elemento.Id)"/>
                                        <input type="submit"
                                            value="@lib_lenguajes.RsMenu.lbBorrar"
                                            asp-page-handler="BtBorrarVal"
                                            class="btn btn-secondary"
                                            asp-route-data="@asp_hoteles.Nucleo.EsconderID.Encriptar(elemento.Id)"/>
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                </div>
            }
        </form>
    </div>
</center>