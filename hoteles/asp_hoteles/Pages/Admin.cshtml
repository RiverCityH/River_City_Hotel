@page
@model IndexModel
@{
    ViewData["Titulo"] = lib_lenguajes.RsIndex.lbTitulo;
}

@if (!Model.EstaLogueado)
{
    <link rel="stylesheet" href="~/css/styles.css" />
    <main class="d-flex align-items-start justify-content-center" style="height: 100vh; background-color: #FFE8E8; padding-top: 50px;">
        <div class="container" style="width: 60%;">
            <h3 class="text-center" style="margin-bottom: 30px;">@lib_lenguajes.RsIndex.lbTitulo</h3>

            <form method="POST">
                <div class="form-group text-center">
                    <label class="control-label">@lib_lenguajes.RsIndex.lbUsuario</label>
                    <input onchange="keyUp(this)"
                           asp-for="@Model.Email"
                           class="form-control"
                           style="max-width: 300px; margin: auto;" />
                </div>
                <div class="form-group text-center" style="margin-top: 15px;">
                    <label class="control-label">@lib_lenguajes.RsIndex.lbContraseña</label>
                    <input type="password"
                           onchange="keyUp(this)"
                           asp-for="@Model.Contraseña"
                           class="form-control"
                           style="max-width: 300px; margin: auto;" />
                </div>

                <div class="text-center" style="margin-top: 20px;">
                    <input type="submit" value="@lib_lenguajes.RsMenu.lbEntrar" asp-page-handler="BtEntrar" class="btn btn-danger" />
                </div>
            </form>
        </div>
    </main>
}
else
{
    <main class="d-flex align-items-center justify-content-center" style="height: 100vh; background-color: #FFE8E8;">
        <div class="container">
            <div class="text-center mb-4">
                <h1 class="display-4">@lib_lenguajes.RsIndex.lbBienvenido</h1>
                <form method="POST">
                    <input type="submit" value="@lib_lenguajes.RsMenu.lbCerrar" asp-page-handler="BtCerrar" class="btn btn-default" />
                </form>
            </div>

            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-header custom-bg text-white">
                            <h5>Reservas</h5>
                        </div>
                        <div class="card-body">
                            <h2 class="display-4">150</h2>
                            <p>Total de Reservas</p>
                            <button class="btn btn-danger">Ver Detalles</button>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-header custom-bg text-white">
                            <h5>Ingresos</h5>
                        </div>
                        <div class="card-body">
                            <h2 class="display-4">$20,000</h2>
                            <p>Total de Ingresos</p>
                            <button class="btn btn-danger">Ver Detalles</button>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-header custom-bg text-white">
                            <h5>Gastos</h5>
                        </div>
                        <div class="card-body">
                            <h2 class="display-4">$15,000</h2>
                            <p>Total de Gastos</p>
                            <button class="btn btn-danger">Ver Detalles</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 text-center">
                    <button class="btn btn-danger btn-lg">Actualizar Datos</button>
                </div>
            </div>
        </div>
    </main>
}