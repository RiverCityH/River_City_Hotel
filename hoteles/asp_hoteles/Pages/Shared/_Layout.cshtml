<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" 
        content="width=device-width, initial-scale=1.0" />
    <title>
        @ViewData["Titulo"] - @lib_lenguajes.RsMenu.lbApp
    </title>
    <link rel="stylesheet" 
        href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" 
        href="~/css/site.css" 
        asp-append-version="true" />
    <link rel="stylesheet" 
        href="~/asp_hoteles.styles.css" 
        asp-append-version="true" />
    <link rel="stylesheet"
          href="~/css/site.css" />
    <link rel="stylesheet"
          href="~/css/buttons.css" />
    <link rel="stylesheet"
          href="~/css/colors.css" />
    <link rel="stylesheet"
          href="~/css/screens.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" 
                    asp-area="" 
                    asp-page="/Index">
                    @lib_lenguajes.RsMenu.lbApp
                </a>
                <button class="navbar-toggler" 
                    type="button" 
                    data-bs-toggle="collapse" 
                    data-bs-target=".navbar-collapse" 
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false" 
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon">

                    </span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (ViewData.ContainsKey("Logueado"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" 
                                    asp-area="" 
                                    asp-page="/Ventanas/Paises">
                                    @lib_lenguajes.RsMenu.lbPaises
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" 
                                    asp-area="" 
                                    asp-page="/Ventanas/Departamentos">
                                    @lib_lenguajes.RsMenu.lbDepartamentos
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" 
                                    asp-area="" 
                                    asp-page="/Ventanas/Ciudades">
                                    @lib_lenguajes.RsMenu.lbCiudades
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" 
            class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @lib_lenguajes.RsMenu.lbAño - @lib_lenguajes.RsMenu.lbApp
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js">

    </script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js">

    </script>
    <script src="~/js/site.js" asp-append-version="true">

    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>